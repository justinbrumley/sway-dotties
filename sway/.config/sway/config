###############
## Variables ##
###############

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# VIM-like controls.
set $left h
set $down j
set $up k
set $right l

# Default terminal.
set $term /usr/bin/kitty

# Default browser.
set $browser firefox

#############
## Styling ##
#############

# Floating windows (by default)
for_window [window_type="dialog"] floating enable
for_window [window_role="dialog"] floating enable

for_window [instance="proxy.iinact.com__overlay_mopimopi"] floating enable
for_window [instance="proxy.iinact.com__overlay_mopimopi"] opacity 0.9
for_window [instance="proxy.iinact.com__overlay_mopimopi"] resize set 550px 350px
for_window [instance="proxy.iinact.com__overlay_mopimopi"] layer top

for_window [app_id="thunar"] floating enable
for_window [title="Open Files"] floating enable
for_window [class="modmanager.exe"] floating enable
for_window [class="zoom"] floating enable

for_window [class="feh"] floating enable

for_window [window_role="dialog"] floating enable

# Pretty sure it just remembers the size automatically, but leaving here to tweak later:
for_window [app_id="yubi"] floating enable, resize set 450px 340px

# for_window [title="Friends List"] resize set 300px

# Chiaki fullscreen streaming
for_window [title="Chiaki | Stream"] fullscreen enable

# Remove title bar
default_border none

# Default gaps
gaps inner 8

# SwayFX styling
corner_radius 8
blur enable
blur_passes 1
shadows enable

layer_effects "waybar" {
  shadows disable;
  blur enable;
  blur_passes 1;
  blur_xray enable;
  blur_ignore_transparent enable;
  corner_radius 8;
}

#############
## Outputs ##
#############

output DP-3 {
  resolution 1920x1080@160Hz
  position 1920,150
  adaptive_sync on
  bg /home/justin/Pictures/wallpapers/crew.jpg fill
}

output HDMI-A-1 {
  resolution 1920x1080
  position 0,0
  bg /home/justin/Pictures/wallpapers/crew.jpg fill
}

############
## Basics ##
############

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+q kill

# Start your launcher
set $menu wofi --show drun | xargs swaymsg exec --
bindsym $mod+space exec $menu

# Start Browser
bindsym $mod+b exec $browser

# Start Qobuz
bindsym $mod+m exec dex /usr/share/applications/qobuz.desktop

# Toggle Gaps
bindsym $mod+g gaps inner current toggle 10px

# Screenshot
bindsym $mod+Shift+p exec GRIM_DEFAULT_DIR=~/Pictures/screenshots grim -g "$(slurp)"
bindsym $mod+Shift+Ctrl+p exec GRIM_DEFAULT_DIR=~/Pictures/screenshots grim -g "1920,100 1920x1080"

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Toggle float on active window
bindsym $mod+v floating toggle

# Toggle sticky on active window
bindsym $mod+Shift+v sticky toggle

# Reload the configuration file
bindsym $mod+Shift+c reload

# Lock the screen
bindsym $mod+home exec killall -s SIGUSR1 swayidle

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

##############
## Movement ##
##############

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Cycle workspaces
# bindsym $mod+w workspace prev_on_output
# bindsym $mod+s workspace next_on_output

# Switch to workspace
bindsym $mod+1 exec swayworkspace navigate 1
bindsym $mod+2 exec swayworkspace navigate 2
bindsym $mod+3 exec swayworkspace navigate 3
bindsym $mod+4 exec swayworkspace navigate 4
bindsym $mod+5 exec swayworkspace navigate 5

# Move focused container to workspace
bindsym $mod+Shift+1 exec swayworkspace move 1
bindsym $mod+Shift+2 exec swayworkspace move 2
bindsym $mod+Shift+3 exec swayworkspace move 3
bindsym $mod+Shift+4 exec swayworkspace move 4
bindsym $mod+Shift+5 exec swayworkspace move 5

# Move to next and previous workspace on output
bindsym $mod+s exec swayworkspace navigate next
bindsym $mod+w exec swayworkspace navigate previous

# Move focused container to next/previous workspace
bindsym $mod+Shift+s exec swayworkspace move next
bindsym $mod+Shift+w exec swayworkspace move previous

############
## Layout ##
############

# Toggle Waybar
bindsym $mod+Semicolon exec togglewaybar

# Switch the current container between different layout styles
# bindsym $mod+v split
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed

bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
# bindsym $mod+space focus mode_toggle

# Move focus to the parent container
# bindsym $mod+a focus parent

################
## Scratchpad ##
################

# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

#################
## Resize Mode ##
#################

mode "resize" {
  # left will shrink the containers width
  # right will grow the containers width
  # up will shrink the containers height
  # down will grow the containers height
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px

  # Ditto, with arrow keys
  bindsym Left resize shrink width 10px
  bindsym Down resize grow height 10px
  bindsym Up resize shrink height 10px
  bindsym Right resize grow width 10px

  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#############
## Startup ##
#############

exec waybar
exec nm-applet
exec insync start
exec_always /home/justin/.local/bin/swayworkspace startup

# Clipboard manager
exec wl-paste -t text --watch clipman store --no-persist

include /etc/sway/config.d/*
